{
  "compilerOptions": {
    "outDir": "./dist", // Output to 'dist' folder
    "rootDir": "./src", // Source files in 'src' folder
    "target": "ES2021", // Modern JavaScript version
    "module": "CommonJS", // Node.js uses CommonJS
    "esModuleInterop": true, // Smooth imports from ES modules
    "strict": true, // Enable strict mode
    "skipLibCheck": true, // Skip checking .d.ts files
    "forceConsistentCasingInFileNames": true
  }
}
